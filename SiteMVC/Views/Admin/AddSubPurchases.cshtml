@model SiteMVC.ViewModels.SubPurchase

@{
    ViewBag.Title = "Добавление посредников | Недвижимость-UA";
    Layout = "~/Views/Shared/_AdvertismentsLayout.cshtml";
}

@section Head
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
}

@section Body
{
    <h2>Добавление посредников по номеру телефона</h2>

    @using (Ajax.BeginForm("AddSubpurchaseAndPhones", "Admin", null, new AjaxOptions()
        {
            HttpMethod = "POST",
            UpdateTargetId = "formResultContainer",
            LoadingElementId = "loadingForm"
        }, new { @class = "form-horizontal" }))
    {
        <div class="control-group">
            <label class="control-label">Имя посредника</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Имя" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Фамилия посредника</label>
            <div class="controls">
                @Html.TextBoxFor(m => m.LastName, new { placeholder = "Фамилия" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Телефоны</label>
            <div class="controls">
                @Html.TextAreaFor(m => m.PhonesByCommas, new { placeholder = "Телефон(ы)", rows = "4" })
                <br />
                <small class="muted">* телефоны вводить через запятую или с новой строки</small>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn" value="Добавить посредника" />
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div id="formResultContainer"></div>
                <div class="loading_container loading_small_container" style="display:none;" id="loadingForm">
                    <span class="loading">&nbsp;</span>
                </div>
            </div>
        </div>
    }
}
