@model SiteMVC.ViewModels.User

@{
    ViewBag.Title = "Регистрация нового пользователя | Недвижимость-UA";
    Layout = "~/Views/Shared/_AdvertismentsLayout.cshtml";
}

@section Head
{
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
}

@section Body
{
    <h2>Регистрация нового пользователя</h2>

    <p>
        Для более удобного использования нашего сайта и сервисов предлагаем Вам зарегистрироваться и 
        входить на сайт используя свой логин\email и пароль.
    </p>

    @using(Html.BeginForm("Register", "Authentication", FormMethod.Post, new { @class = "form-horizontal" }))
    {
      <div class="control-group">
        <label class="control-label">Email*</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Email, new { placeholder="Email" })
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Логин</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Login, new { placeholder="Логин" })
        </div>
      </div>
      <div class="control-group">
        <div class="controls" style="line-height: 20px;">
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.IsSubPurchase)
                <small>
                    Являетесь ли Вы представителем агенства недвижимости или частным агентом?
                </small>
            </label>
            <br />
            <small class="muted">
                Для агенств недвижимости и частных агентов предоставляются специализированные сервисы и услуги.
            </small>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Пароль*</label>
        <div class="controls">
            @Html.PasswordFor(m => m.Password, new { placeholder="Пароль" })
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Повторите пароль*</label>
        <div class="controls">
            @Html.PasswordFor(m => m.RepeatPassword, new { placeholder="Повторите пароль" })
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Телефон</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.Phone, new { placeholder="(111)111-11-11" })
        </div>
      </div>
      <div class="control-group">
        <div class="controls" style="line-height: 42px;">
            @Html.ValidationSummary()
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
            <input type="submit" value="Зарегистрировать" class="btn" />
        </div>
      </div>
    }
}