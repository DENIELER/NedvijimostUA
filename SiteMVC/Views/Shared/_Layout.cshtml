<!DOCTYPE html>

<html lang="ru">
<head runat="server">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    
    <title>
        @ViewBag.Title
    </title>

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/main.css" type="text/css" rel="stylesheet" />

    @RenderSection("Head", required:false)
    
    <script type="text/javascript" src="~/Scripts/jquery-2.0.2.min.js"></script>

    <!-- Social network buttons -->
    <script type="text/javascript" src="http://userapi.com/js/api/openapi.js?52"></script>
    
    <script type="text/javascript" async="async">
        VK.init({ apiId: 3111027, onlyWidgets: true });
    </script>

    <script type="text/javascript">
        (function () {
            var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
            po.src = 'https://apis.google.com/js/plusone.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
        })();
</script>
    <!-- Social network buttons -->
</head>
<body>
    <div class="container" style="width: 1170px;">
            
            <div class="container" style="width: 1060px;">
                <div style="width: 1060px;">
                    <div style="float:left; width: 385px; height: 223px;">
                        <img style="display: block;" src="~/Content/img/header_image_top.png" alt="Недвижимость Харьков"/>
                        <img style="display: block;" src="~/Content/img/header_image_bottom.png" alt="Недвижимость Харьков"/>
                    </div>

                    <div style="float:left; width: 675px;height: 223px;">
                        <div class="row-fluid" style="height: 223px;">
                            <div class="span7">
                                <div style="height: 120px;">
                                    <h1 style="color: #b8b8b8;position: relative; top: 20px; left: 10px;">Недвижимость</h1>
                                    <h2 style="color: #dbdbdb;position: relative; top: 20px; left: 130px; font-size: 16px; width: 330px;">Каталог без посредников</h2>
                                </div>

                                <div style="height: 65px; position:relative; top:28px;">
                                    <h3 style="color: #b8b8b8; position: relative; left: 10px; top: 25px; z-index: 2; display: block;">Харьков</h3>
                                    <img style="height: 66px; max-width: 222px; display: block; top: -31px; position: relative; z-index: 1;" src="~/Content/img/header_squares.png" alt="Squares"/> 
                                </div>
                            </div>

                            <div class="span5" style="height: 223px;">
                                <div style="width: 220px; background-color: #dbdbdb; height: 223px;">
                                    <div style="padding-top: 10px;">
                                        @{
                                            Html.RenderAction("AuthorizationControl", "Authorization", new { area = "Controls" });
                                        }
                                    </div>

                                    <div>
                                        <div style="margin-top: 10px;">
                                            <div class="g-plusone" data-size="standard" data-count="true"></div>
                                        </div>
                                        <div style="margin-top: 10px;">
                                            <div id="vk_like"></div>
                                            <script type="text/javascript">
                                                VK.Widgets.Like("vk_like", { type: "button", pageUrl: "http://nedvijimost-ua.com" }, 190);
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="container" style="height: 43px; width: 1060px;">
                    <div style="float:right; width: 682px; height: 43px;">
                        <div id="mainMenu">
                            <a href="@Url.Content("~/")" class="first">Главная</a>
                            <a href="@Url.Content("~/Arhiv-obyavlenij")">Архив объявлений</a>
                            <a href="@Url.Content("~/Novosti-nedvijimosti")">Новости и статьи</a>
                            <a href="@Url.Content("~/Kontakti")" class="last">Контакты</a>
                        </div>
                    </div>
            </div>

    </div>
    
    <div class="container" style="width: 1170px;">
        <div class="container" style="width: 1060px; margin: 0 auto;">
            <div class="row-fluid">
                @RenderSection("Body", required:true)
            </div>
        </div>
    </div>
    
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
    <!-- Google Analitycs -->
