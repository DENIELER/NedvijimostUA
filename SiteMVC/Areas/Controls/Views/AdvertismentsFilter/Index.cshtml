@model SiteMVC.Areas.Controls.ViewModel.FilterViewModel

<script type="text/javascript">
    $(function () {
        $('#filterLink').click(function () {
            $('#filterContainer').slideToggle(500);
        });
    });
</script>

<div class="text-right">
    <a id="filterLink" class="dropdown">Фильтр объявлений <b class="caret"></b></a>
</div>

<div class="well" id="filterContainer" style="display: none;">
  @using (Html.BeginForm("Filter", "AdvertismentsFilter", FormMethod.Post, new { style = "margin-bottom: 0;" }))
  {
    <div class="row-fluid" style="width: 300px;">
        <div class="span6">Количество комнат:</div>
        <div class="span6">
            @Html.DropDownListFor(m => m.Filter.Rooms, (List<SelectListItem>)ViewBag.RoomsFilterList, new { @class = "input-medium" })
        </div>
    </div>
      
      <div>
        <label class="checkbox inline">
            @Html.CheckBoxFor(m => m.Filter.OnlyWithPhotos.Value) <i class="icon-camera"></i> Только с фото
        </label>
      </div>
      
      <div class="text-right">
        <input type="submit" class="btn btn-primary" value="Применить фильтр" />
      </div>
  }
</div>
