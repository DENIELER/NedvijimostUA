<script type="text/javascript">
    $(function () {
        $('#filterLink').click(function () {
            $('#filterContainer').slideToggle(500);
        });
    });
</script>

<div class="text-right">
    <a id="filterLink" class="dropdown">Фильтр объявлений <b class="caret"></b></a>
</div>

<div class="well" id="filterContainer" style="display: none;">
  @using (Html.BeginForm("Index", "Filter", FormMethod.Get, new { style = "margin-bottom: 0;" }))
  {
      <div class="row-fluid" style="width: 300px;">
          <div class="span6">Количество комнат:</div>
          <div class="span6">
            <select class="input-small">
                <option>1-комн. кв.</option>
                <option>2-комн. кв.</option>
                <option>3-комн. кв.</option>
            </select>
          </div>
      </div>
      
      <div>
        <label class="checkbox inline">
            <input type="checkbox" id="inlineCheckbox4" value="onlyWithPhotos"> <i class="icon-camera"></i> Только с фото
        </label>
      </div>
      
      <div class="text-right">
        <input type="submit" class="btn btn-primary" value="Фильтровать" />
      </div>
  }
</div>
