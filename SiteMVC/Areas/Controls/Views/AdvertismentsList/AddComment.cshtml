@using (Ajax.BeginForm(new AjaxOptions()
    {
        HttpMethod = "POST",
        LoadingElementId = "add_comment_loading_" + Model,
        OnSuccess = "AddCommentSuccess"
    }))
{
    <h4>Комментарий</h4>
    <div class="control-group">
        <label>Текст комментария:</label>
        <textarea rows="5" style="margin:0;padding:0;width:100%;" name="message"></textarea>
        <input type="hidden" name="advertismentID" value="@Model" />
    </div>
    <div class="control-group">
        <input type="submit" class="btn btn-primary" value="Оставить комментарий" />
    </div>
}

<div id="add_comment_loading_@Model" class="loading_container" style="display: none;">
    <div class="loading"></div>
</div>